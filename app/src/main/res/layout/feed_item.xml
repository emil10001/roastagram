<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/post_card_view"
        android:layout_width="@dimen/feed_card_width"
        android:layout_height="@dimen/feed_card_height"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/post_image"
                android:layout_width="@dimen/feed_image_width"
                android:layout_height="@dimen/feed_image_height" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="56dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <ImageButton
                    android:id="@+id/post_beanlike_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bean_button" />
                <TextView
                    android:id="@+id/post_likes"
                    android:textColor="@android:color/darker_gray"
                    android:text="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/post_profile_picture"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:id="@+id/post_username"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>